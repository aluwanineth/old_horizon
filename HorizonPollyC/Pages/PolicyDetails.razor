                    <th class="rz_h_type">Member Details</th>
                    <th class="rz_h_type">Premium Details</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td rowspan="2">

                        <table class="inner_tbl">
                            <tbody>
                                <tr>
                                    <td>
                                        Master Contract:
                                    </td>
                                    <td>@(userInfo.PolicyNumber == null ? "" : userInfo.PolicyNumber.ToString())</td>
                                </tr>
