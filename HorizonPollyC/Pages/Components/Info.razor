@inject Radzen.DialogService dialogService


<RadzenPanel Style="z-index:1500;width:430px;height:640px;">
    <HeaderTemplate>
        <h1 style="font-weight: bold;">@title</h1>

    </HeaderTemplate>
    <ChildContent>
        <RadzenCard Style="width:410px;height:530px;">
            <div class="alert alert-info" role="alert" style="width:400px;height:540px">
                <div class="container">
                    <div class="row" style="padding-bottom:20px;">
                        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                            <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            </symbol>
                            <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                            </symbol>
                            <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                            </symbol>
                        </svg>

                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
                      
                    </div>
                    <div class="row">
                    <p>
                        In order for us to finalise your Government Salary Deduction request, I am required to ask and complete the following information: 
                        <ol>
                            <li> Mr/Mrs @accountholder I am calling from Clientele’s call centre regarding the total monthly payment for your Clientele Life/Legal policy that you want deducted from your government salary. </li>
                            <li> Please confirm that you are employed at the Department of XXXXX . Is this correct?</li>
                            <li> Your employee number is XXXX . Is this correct? </li>
                            <li> Your initials and surname are XX XXXXX Is this correct? </li>
                            <li> You have also given me your ID number as XXXXXXXX. Is this correct?</li>
                            <li> Today is the XXX and your policy will commence for new salary month (Confirm the date – MM/YY… only month and year [no day])</li>
                            <li> The total monthly payment that will be deducted is R XXX.XX. Is this correct?</li>
                            <li> Mr/Mrs XXX with employee number please confirm that you give Clientele permission to deduct R XXX.XX for your XXX insurance from your salary starting, new salary month. (Confirm the date – MM/YY… only month and year [no day]) </li>
                        </ol>
                        Your policy number is XXXXX 
                        Mr/s Mantsi XXXXX please note that your monthly premium will still be deducted from your bank account until the payroll instruction is activated.

                    </p>
                    </div>
                </div>
            </div>
        </RadzenCard>
        <RadzenCard Style="padding-top: 30px;width:410px;height:80px;">
            <div class="col-md-12 text-end">
                <RadzenButton Click="@((args) => dialogService.Close(false))" Variant="Variant.Flat" Text="Cancel" Style="width: 120px" Class="me-1" />

            </div>

        </RadzenCard>


    </ChildContent>


</RadzenPanel>

@code {

    [Parameter] public string title { get; set; }
    [Parameter] public string messages { get; set; } = string.Empty;
    [Parameter] public string accountholder { get; set; } = string.Empty;

  

    protected async override void OnParametersSet()
    {
       
        
    }



}
