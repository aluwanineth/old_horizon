                                        <span style="@("display:" + (state_is_editing ? "none" : "block") + ";")">@(PhyAddressLine3 ?? "")</span>
                                        <RadzenTextBox class="frm_input" @bind-Value=@temp_phy_suburb Style="@("display:" + (state_is_editing ? "block" : "none") + ";")" />
